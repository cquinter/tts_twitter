<div class="field">
  <%= f.label :email %><br />
  <%= f.email_field :email, autofocus: true %>
</div>

<div class="field">
  <%= f.label :username %><br />
  <%= f.text_field :username %>
</div>

<div class="field">
  <%= f.label :name %><br />
  <%= f.text_field :name %>
</div>

<div class="field">
  <%= f.label :city %><br />
  <%= f.text_field :city %>
</div>

<div class="field">
  <%= f.label :state %><br />
  <%= f.select :state, us_states %>
</div>

<div class="field">
  <%= f.label :bio %><br />
  <%= f.text_area :bio, cols: 50, rows: 10 %>
</div>

<div class="form-group">
  <strong>Upload a profile pic</strong>
  <%= f.file_field :avatar %>
</div>
