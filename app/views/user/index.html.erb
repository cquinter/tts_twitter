<br>

<% @users.in_groups_of(3) do |group| %>
  <div class="row">
    <% group.each do |user| %>
      <div class="col-xs-12 col-sm-12 col-md-4">
        <div class="thumbnail">
          <%= image_tag user.avatar.url %>
          <div class="caption">
            <%= link_to "@#{user.username}", user_url(id: user.id) %>
            <br>
            <%= user.name %>
            <br>
            <%= user.city %>, <%= user.state %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
